<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SonsOfUncleBob.Views.History"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             xmlns:Views="clr-namespace:SonsOfUncleBob.Views">


<VerticalStackLayout>
    <Label Text="Data History" FontSize="Header" FontAttributes ="Bold" HorizontalOptions="Center" />

        <Picker x:Name="myDropdown" Title="Select a Room" Background="WhiteSmoke" TextColor="Black" SelectedItem="{Binding SelectedRoom, Mode=TwoWay}" ItemsSource="{Binding RoomList}" ItemDisplayBinding="{Binding Name}">

        </Picker>

        <Label Text="Selected room:" FontSize="Default" />
        <Label Text="{Binding SelectedRoom.Name}" FontSize="Default" />

        <micro:ChartView x:Name="chartView" HeightRequest="500" />


    </VerticalStackLayout>
</ContentView>
