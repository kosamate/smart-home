<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SonsOfUncleBob.Views.Information"
             xmlns:Views="clr-namespace:SonsOfUncleBob.Views">
    
    <VerticalStackLayout>
        <Label Text="Room Information" FontSize="Header" FontAttributes ="Bold" HorizontalOptions="Center" />

        <Picker x:Name="myDropdown" Title="Select a Room" Background="WhiteSmoke" TextColor="Black"  SelectedItem="{Binding Room, Mode=TwoWay}" ItemsSource="{Binding RoomList}" ItemDisplayBinding="{Binding Name}">

        </Picker>

        
        <Label Text="Selected room:" FontSize="Default"/>
        <Label Text="{Binding Room.Name}" FontSize="Default"/>

        
        <HorizontalStackLayout Spacing="50">
            <Label Text="{Binding Room.SignalSummary}" FontSize="Medium"/>
            <Label Text="Desired Temperature:" FontSize="Medium"/>
            <Entry Placeholder="Desired" VerticalOptions="Start" BackgroundColor="WhiteSmoke" TextColor="Black" Keyboard="Numeric" WidthRequest="70" HeightRequest="20" />
        </HorizontalStackLayout>
            
            
    </VerticalStackLayout>
    
    
</ContentView>
